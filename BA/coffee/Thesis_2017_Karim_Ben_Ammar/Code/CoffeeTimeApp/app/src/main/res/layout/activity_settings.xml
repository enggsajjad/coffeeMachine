<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBraun"
    tools:context="ces.bachelor.coffeetime.Settings">

    <android.support.v7.widget.Toolbar
        android:id="@+id/child_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/lightBraun"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@id/child_toolbar"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/braun"
            android:textSize="36sp"
            />
        <!--<Switch
            android:text="Play a game while waiting  :  "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:textSize="16dp"
            android:theme="@style/SCBSwitch"
            android:layout_marginRight="60dp"
            android:id="@+id/game"
            android:layout_marginLeft="10dp"
            />-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:text="Limit coffees per month :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/braun"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView2"
                android:layout_weight="1" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:id="@+id/coffeesPerMonth"
                android:theme="@style/cooffeeLimit"
                android:textColor="@color/braun"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Limit coffees per day :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/braun"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView3"
                android:layout_weight="1" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:id="@+id/coffeesPerDay"
                android:textColor="@color/braun"
                android:theme="@style/cooffeeLimit"
                android:textAlignment="center"
                android:layout_marginRight="50dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:text="Save"
            android:textColor="@color/white"
            android:background="@drawable/button_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveSettings"
            android:onClick="save"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="30dp"
             />

    </LinearLayout>

</RelativeLayout>
