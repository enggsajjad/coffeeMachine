<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBraun"
    tools:context="ces.bachelor.coffeetime.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="4dp"
        android:background="@color/lightBraun"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title2"
        android:text="Coffee Time"
        android:textAlignment="center"
        android:textColor="@color/braun"
        android:layout_marginTop="60dp"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="false" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_margin="30dp"
        android:layout_below="@+id/title2"
        android:elevation="4dp"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/user"
                android:padding="7dp"
                android:textColor="@color/black"
                android:text="Welcome "/>
            <TextView
                android:id="@+id/balance"
                android:layout_below="@id/user"
                android:layout_width="match_parent"
                android:padding="7dp"
                android:layout_height="wrap_content"
                android:text="Balance :"/>
            <TextView
                android:id="@+id/lastChoice"
                android:layout_below="@id/balance"
                android:layout_width="match_parent"
                android:padding="7dp"
                android:layout_height="wrap_content"
                android:text="Last choice :"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view">

       <!-- <CheckBox
            android:text="Milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/start"
            android:id="@+id/checkMilk"
            android:buttonTint="@color/braun"
            android:gravity="center"
            android:enabled="false"/>-->

        <Button
            android:text="Unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_custom"
            android:textColor="@color/white"
            android:onClick="onStart"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>
