import sys

import PyQt5
from PyQt5.QtWidgets import *
from PyQt5.QtGui import *
import coffeeTimeOrder_auto

class CoffeeTimeOrder(QDialog, coffeeTimeOrder_auto.Ui_Dialog):

 def setCoffeeChoice(self):
  self.coffeeOrder.setIcon(QIcon("../res/coffeeSelected.png"))
  self.waterOrder.setIcon(QIcon("../res/waterNotSelected.png"))
  
  self.addMilk.setEnabled(True)
 def setWaterChoice(self):
  self.coffeeOrder.setIcon(QIcon("../res/coffeeNotSelected.png"))
  self.waterOrder.setIcon(QIcon("../res/waterSelected.png"))
  self.addMilk.setStyleSheet("background-color : rgb(217, 203, 174); color : rgb(0, 0, 0); border : 1px solid white; border-radius: 10px;")
  self.addMilk.setEnabled(False)

 def chooseMilk(self):
  if self.withMilk :
   self.addMilk.setStyleSheet("background-color : rgb(217, 203, 174); color : rgb(0, 0, 0); border : 1px solid white; border-radius: 10px;")
   self.withMilk = False
  else :
   self.addMilk.setStyleSheet("background-color : rgb(72, 43, 27); color : rgb(255, 255, 255); border : 1px solid white; border-radius: 10px;")
   self.withMilk = True
 
 def __init__(self):
  super(self.__class__, self).__init__()
  self.setupUi(self)
  
  self.withMilk = False

  self.coffeeOrder.clicked.connect(lambda : self.setCoffeeChoice())
  self.waterOrder.clicked.connect(lambda : self.setWaterChoice())
  self.menuButton.clicked.connect(lambda : self.showMenu())
  self.addMilk.clicked.connect(lambda : self.chooseMilk())
